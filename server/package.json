{
  "name": "skillomania-server",
  "version": "1.0.0",
  "main": "build/src/server.js",
  "private": true,
  "license": "MIT",
  "scripts": {
    "----PRODUCTION-BELOW----": "",
    "start": "node build/src/server.js",
    "----TOOLS-BELOW----": "",
    "build": "tsoa spec-and-routes && tsc --project tsconfig.json",
    "generate-types": "openapi-typescript src/doc/api-definition-base.yml --output src/types/api.ts",
    "----TESTS-BELOW----": "",
    "test:dev": "jest --watchAll",
    "test": "jest",
    "----DEV-MODES-BELOW----": "",
    "dev": "concurrently \"nodemon | pino-pretty\" \"nodemon -x tsoa spec-and-routes\"",
    "----DATABASE-OPERATIONS-BELOW----": "",
    "db:migration:create": "node scripts/createMigration.js",
    "db:migration:run": "ts-node --project ./tsconfig.json ./node_modules/typeorm/cli.js migration:run -d ./src/database/dataSource.ts",
    "db:migration:revert": "ts-node  --project ./tsconfig.json ./node_modules/typeorm/cli.js migration:revert -d ./src/database/dataSource.ts",
    "db:seed:run": "ts-node ./src/database/seed.ts",
    "db:purge:dangerous": "ts-node ./src/database/purge.ts"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.7",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "google-auth-library": "^9.11.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "pino": "^9.3.1",
    "pino-http": "^10.2.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.3.1",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.5.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.13",
    "@types/readline-sync": "^1.4.8",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "pino-pretty": "^11.2.1",
    "readline-sync": "^1.4.10",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "workspaces": {
    "nohoist": [
      "tsoa",
      "tsoa/**",
      "concurrently",
      "concurrently/**"
    ]
  }
}

{
  "name": "skillomania-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "----DEV-MODES-BELOW----": "",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run watch:node\"",
    "watch:node": "nodemon dist/index.js",
    "watch:ts": "tsc --watch --project tsconfig.json",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run serve:debug\"",
    "watch-debug:node": "nodemon --inspect dist/server.js",
    "----DATABASE-OPERATIONS-BELOW----": "",
    "db:migration:create": "node scripts/createMigration.js",
    "db:migration:run": "ts-node --project ./tsconfig.json ../node_modules/typeorm/cli.js migration:run -d ./src/database/dataSource.ts",
    "db:migration:revert": "ts-node  --project ./tsconfig.json ../node_modules/typeorm/cli.js migration:revert -d ./src/database/dataSource.ts",
    "db:seed:run": "ts-node ./src/database/seed.ts",
    "db:purge:dangerous": "ts-node ./src/database/purge.ts"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.7",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "google-auth-library": "^9.11.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.5.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.13",
    "@types/readline-sync": "^1.4.8",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.2",
    "readline-sync": "^1.4.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
